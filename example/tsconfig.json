{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "charset": "utf8",
    "allowJs": false,
    "pretty": true,
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "strictPropertyInitialization": false,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "inlineSourceMap": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./app/*"
      ],
      "@controller/*": [
        "./app/controller/*"
      ],
      "@dto/*": [
        "./app/dto/*"
      ],
      "@logic/*": [
        "./app/logic/*"
      ],
      "@entity/*": [
        "./app/entity/*"
      ],
      "@service/*": [
        "./app/service/*"
      ]
    }
  },
  "exclude": [
    "app/public",
    "app/views",
    "node_modules*"
  ]
}